<?xml version="1.0" encoding="utf-8"?>
<!-- 회원가입 화면 -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/askSignUpText"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToOutline="true">

    <ImageView
        android:id="@+id/SignUpLogo"
        android:layout_width="174dp"
        android:layout_height="147dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="117dp"
        android:layout_marginTop="22dp"
        app:srcCompat="@drawable/signUpPagelogo" />

    <EditText
        android:id="@+id/logInIdEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="198dp"
        android:background="@drawable/border"
        android:ems="12"
        android:hint="아이디를 입력해주세요."
        android:inputType="textPersonName"
        android:typeface="sans" />

    <EditText
        android:id="@+id/logInPassWordEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="251dp"
        android:background="@drawable/border"
        android:ems="12"
        android:hint="비밀번호를 입력해주세요."
        android:inputType="textPassword"
        android:typeface="sans" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="241dp"
        app:srcCompat="@drawable/loginG" />

    <TextView
        android:id="@+id/snsLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="198dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="sns 로그인"
        android:textColor="#DD4A4747"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="97dp"
        android:fontFamily="sans-serif-medium"
        android:text="아직 마이펫 회원이 아니신가요?"
        android:textColor="#DF4A4747"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp"
        app:srcCompat="@drawable/signUpG" />

</RelativeLayout>


