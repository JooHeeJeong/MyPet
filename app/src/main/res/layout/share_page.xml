<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/puppyImg"
        android:layout_width="0dp"
        android:layout_height="280dp"
        android:layout_marginTop="100dp"
        app:layout_constraintBottom_toTopOf="@+id/puppyNameT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/puppy"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/puppyNameT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="찰스"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/shareIdT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/puppyImg"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/shareIdT"
        android:layout_width="326dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="13dp"
        android:text="공유받을 사람의 \n아이디를 입력해주세요."
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:fontWeight="800"
        app:layout_constraintBottom_toTopOf="@+id/shareT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/puppyNameT"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/shareT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="172dp"
        android:layout_marginBottom="30dp"
        android:text="가족과 함께 정보를 공유해보세요!"
        app:layout_constraintBottom_toTopOf="@+id/shareIdEditT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shareIdT"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/shareIdEditT"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="10dp"

        android:layout_marginBottom="1dp"
        android:background="@drawable/border"
        android:ems="16"
        android:hint=" 공유할 아이디를 입력해주세요."
        android:inputType="textPersonName"
        android:typeface="sans"
        app:layout_constraintBottom_toTopOf="@+id/shareButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.539"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shareT" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/shareButton"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/buttonborder"
        android:backgroundTint="#FF913F"
        android:text="공유하기"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shareIdEditT"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>